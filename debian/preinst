#! /bin/bash

#   Copy init scripts from init.d to OpenRC runlevels.
#
#   We don't link them because the links brake when creating the SquashFS root.

/bin/rm -f /etc/runlevels/default/* /etc/runlevels/nonetwork/* /etc/runlevels/off/* /etc/runlevels/recovery/* /etc/runlevels/sysinit/*

/bin/cp /etc/init.d/{acpi-support,acpid,avahi-daemon,bluetooth,bootlogs,cgroupfs-mount,console-setup.sh,cron,cups,dbus,dhcpcd,dnsmasq,docker,elogind,haveged,irqbalance,network-manager,nmbd,plymouth,preload,pulseaudio-enable-autospawn,rc.local,rmnologin,rng-tools,rsync,rsyslog,samba-ad-dc,sddm,smbd,sudo,tlp,uuidd,virtualbox} /etc/runlevels/default/ || true

/bin/cp /etc/init.d/rc.local /etc/runlevels/nonetwork/local || true

/bin/cp /etc/init.d/{savecache,sendsigs,umountfs,umountnfs.sh,umountroot} /etc/runlevels/off || true

/bin/cp /etc/init.d/{bootlogs,killprocs,single} /etc/runlevels/recovery || true

/bin/cp /etc/init.d/{alsa-utils,apparmor,bootmisc.sh,brightness,checkfs.sh,checkroot-bootclean.sh,checkroot.sh,eudev,hostname.sh,hwclock.sh,keyboard-setup.sh,kmod,mount-configfs,mountall-bootclean.sh,mountall.sh,mountdevsubfs.sh,mountkernfs.sh,mountnfs.sh,networking,plymouth-log,procps,selinux-autorelabel,ufw,urandom,x11-common} /etc/runlevels/sysinit || true

